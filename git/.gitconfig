[user]
  name = Leon Koppel
  email = leonkoppel@outlook.com
[push]
  default = upstream
[pull]
  default = upstream
[core]
  editor = vim
  pager = diff-so-fancy | less --tabs=4 -RFX
[color]
  ui = true
[alias]
  last = log -1 --stat
  cp = cherry-pick
  co = checkout
  cl = clone
  ci = commit
  st = status -sb
  br = branch
  unstage = reset HEAD --
  dc = diff --cached
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
